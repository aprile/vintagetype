section.swallows
  background-color $mustard
  text-transform uppercase
  
  h1.script
    text-transform none
    font-family $font-sacramento
    font-weight 200
    font-size 120px
    letter-spacing 0px
    position relative
    -webkit-transform translate(100px) rotate(-20deg)
    -webkit-transform-origin 0
    transform translate(100px) rotate(-10deg)
    transform-origin 350px 700px   
    
  h1
    letter-spacing 4px
    font-weight 800
    font-size 56px
    
  h2
    font-family $font-oswald
    font-size 28px
    letter-spacing 4px
    position relative
    line-height 40px
  
  h2:first-of-type
    left -90px
    padding-top 10px
    
  h2:last-of-type
    left 84px
    padding-bottom 10px
  
  h3
    font-weight 800
    display inline-block
    position relative
    line-height 26px
    font-size 22px
    left 60px
    top -10px
    letter-spacing 1px
    
  h4
    font-family $font-krona
    font-size 18px
    border-bottom 4px solid $gray
    display inline-block
    padding-bottom 5px
  
  h5
    font-family $font-krona
    font-weight normal
    letter-spacing 2px
    
  h5:first-of-type
    display inline-block
    font-style italic
    position absolute
    top 30px 
    left 120px
    font-size 20px
  
  h5.slant  
    -webkit-transform translate(100px) rotate(-20deg)
    -webkit-transform-origin 0
    transform translate(100px) rotate(-10deg)
    transform-origin 350px 700px    
    position relative
    top -50px
    left 30px
    font-size 10px

  h5:last-of-type
    font-size 9px