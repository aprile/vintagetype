section.fish
  background-color $turquoise
  text-transform uppercase
  
  h1
    font-size 70px
    font-weight 900
    letter-spacing 8px
    position relative
    left -90px
  
  h3
    font-size 16px
    letter-spacing 6px
  h3:first-of-type
    position relative
    top -80px
  h3:last-of-type
    padding-top 15px  
    letter-spacing 4px
    font-size 14px  
     
  h4
    font-family $font-krona
    font-size 14px
    font-weight normal
  h4:first-of-type
    position relative
    left -90px
    letter-spacing 8px
  h4:last-of-type
    font-size 8px
    font-weight bold
    letter-spacing 5px
    
  h6
    letter-spacing 4px
    line-height 20px
  h6:first-of-type
    position relative
    left 100px
    top -90px