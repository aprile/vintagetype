section
  width 100%
  height 775px
  display inline-block !important
  box-sizing border-box
  position relative
  z-index 0
  
  .content
    max-width 500px
    margin 0 auto
    position relative
    top 50%
    transform translateY(-50%)
    text-align center
    display block
    
  a.src:hover .srcimg
    visibility visible
  a.src:hover
    opacity 1
      
  .srcimg
    visibility hidden
    position absolute
    bottom 50px
    left -110px
    z-index 1
  .src
    position absolute
    bottom 20px
    left 49%
    opacity .25
    z-index 1
    
@media $mobile-devices

  body 
    nav
      display none
      
