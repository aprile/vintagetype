body
  background-color $gray
  
  nav
    .infolink
      position fixed
      z-index 2
      top 0px
      right 0px
      padding-top 20px
      padding-right 20px    
      opacity .25
    
    .infolink:hover
      opacity 1  
      
  hr 
    border 0px
    border-bottom 1px solid black
    width 75px
    margin-bottom 20px

